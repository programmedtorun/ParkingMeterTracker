<BorderPane fx:id="mainBorderPane" fx:controller="sample.Controller"
            xmlns:fx="http://javafx.com/fxml">
    <left>
        <VBox alignment="CENTER">
            <Button onAction="#showNewPMDialog" >
                <tooltip>
                    <Tooltip text="Instantiate a New Parking Meter."/>
                </tooltip>
                <graphic>
                    <ImageView>
                        <Image url="@/toolbarButtonGraphics/general/New24.gif"/>
                    </ImageView>
                </graphic>
            </Button>
        </VBox>
    </left>
    <right>
        <VBox alignment="CENTER">
            <Button fx:id="meterListButton" onAction="#showMeterList" text="Manage Parking Meters">
            </Button>
        </VBox>
    </right>
</BorderPane>